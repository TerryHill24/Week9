<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GameCanvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnControl"
        android:layout_width="296dp"
        android:layout_height="36dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="571dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="123dp"
        android:text="START"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="384dp"
        android:layout_height="57dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="562dp"
        android:background="#7D8DE4"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgMole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="348dp"
        android:foreground="@drawable/th__1_"
        android:scrollbarThumbHorizontal="@drawable/th__1_"
        android:scrollbarThumbVertical="@drawable/th__1_"
        android:scrollbarTrackVertical="@drawable/th__1_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

</androidx.constraintlayout.widget.ConstraintLayout>